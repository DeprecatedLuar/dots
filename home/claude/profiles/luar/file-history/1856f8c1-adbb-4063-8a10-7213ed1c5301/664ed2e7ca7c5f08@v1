# Rifle configuration for Ranger
# Place this in ~/.config/ranger/rifle.conf

# Handle executable files first
has_exec_flag = $EDITOR -- "$1"

# Programming files
ext py|sh|pl|rb|php|js|ts|jsx|tsx|c|cpp|h|hpp|java|kt|go|rs = $EDITOR -- "$1"

# Web files
ext html|htm|css|scss|sass|less|xml|svg = $EDITOR -- "$1"

# Config files
ext conf|config|cfg|ini|yaml|yml|json|toml|env = $EDITOR -- "$1"

# Documentation
ext txt|md|rst|org|tex|log|readme = $EDITOR -- "$1"

# Text MIME types
mime ^text = $EDITOR -- "$1"
text/plain = $EDITOR -- "$1"

# JSON specifically
mime application/json = $EDITOR -- "$1"

# Fallback - open anything in editor
!mime ^image, !mime ^video, !mime ^audio = $EDITOR -- "$1"
