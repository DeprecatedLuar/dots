# Moonlight II theme for micro
# Based on atomiks/moonlight-vscode-theme

# Background and foreground
color-link default "#c8d3f5,#202233"
color-link statusline "#c8d3f5,#202233"
color-link tabbar "#c8d3f5,#1e2030"
color-link indent-char "#444a73"
color-link line-number "#444a73,#202233"
color-link current-line-number "#828bb8,#2f334d"
color-link gutter-error "#ff5370"
color-link gutter-warning "#ffc777"

# Cursor and selection
color-link cursor-line "#2f334d"
color-link color-column "#2f334d"
color-link selection "#828bb850"

# Syntax highlighting
color-link comment "#7a88cf"
color-link comment.bright "#7a88cf"

# Keywords and control flow
color-link identifier "#c8d3f5"
color-link identifier.class "#ffc777"
color-link identifier.var "#c8d3f5"

# Statements (keywords, if, for, etc)
color-link statement "#c4a2ff"
color-link statement.symbol "#78dbff"

# Constants (strings, numbers, booleans)
color-link constant "#c3e88d"
color-link constant.bool "#ff966c"
color-link constant.number "#ff966c"
color-link constant.string "#c3e88d"
color-link constant.string.char "#c3e88d"
color-link constant.specialChar "#78dbff"

# Types
color-link type "#ffc777"
color-link type.keyword "#c4a2ff"
color-link type.extended "#ff966c"

# Special elements
color-link special "#fca7ea"
color-link symbol "#78dbff"
color-link symbol.brackets "#a9b8e8"
color-link symbol.operator "#78dbff"
color-link symbol.tag "#ff757f"

# Preprocessor
color-link preproc "#c4a2ff"

# Functions
color-link underlined "#7cafff"

# Errors and warnings
color-link error "#ff5370"
color-link todo "#c4a2ff"

# Diff colors
color-link diff-added "#c3e88d"
color-link diff-modified "#7cafff"
color-link diff-deleted "#ff757f"

# Dividers and borders
color-link divider "#2f334d"
color-link message "#c8d3f5"
color-link error-message "#ff5370"

# Git gutter
color-link git-addition "#c3e88d"
color-link git-modification "#7cafff"
color-link git-deletion "#ff5370"
