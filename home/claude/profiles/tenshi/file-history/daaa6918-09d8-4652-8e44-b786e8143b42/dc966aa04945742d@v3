package main

import (
	"bufio"
	"encoding/json"
	"fmt"
	"net"
	"os"
	"os/signal"
	"syscall"
)

type Message struct {
	LayerChange struct {
		New string `json:"new"`
	} `json:"LayerChange"`
}

func getColorForLayer(layer string) Color {
	switch layer {
	case "default":
		return ColorBlue
	case "vim-normal":
		return ColorGreen
	case "visual-mode":
		return ColorMagenta
	case "vim-shifted":
		return ColorRed
	case "delete-ops":
		return ColorRed
	case "yank-ops":
		return ColorYellow
	case "g-ops":
		return ColorCyan
	case "meta-layer":
		return ColorPurple
	case "escape":
		return Color{R: 0.5, G: 0.5, B: 0.5}
	default:
		return ColorCyan
	}
}

func main() {
	// Initialize overlay window
	fmt.Println("Initializing overlay...")
	if err := InitOverlay(); err != nil {
		fmt.Printf("Failed to create overlay: %v\n", err)
		fmt.Println("Make sure you're running X11 (not Wayland)")
		os.Exit(1)
	}
	defer Cleanup()

	fmt.Println("✓ Overlay created")

	// Handle Ctrl+C gracefully
	sigChan := make(chan os.Signal, 1)
	signal.Notify(sigChan, os.Interrupt, syscall.SIGTERM)
	go func() {
		<-sigChan
		fmt.Println("\nShutting down...")
		Cleanup()
		os.Exit(0)
	}()

	// Connect to kanata
	fmt.Println("Connecting to kanata...")
	conn, err := net.Dial("tcp", "127.0.0.1:5829")
	if err != nil {
		fmt.Printf("Can't connect to kanata: %v\n", err)
		fmt.Println("Make sure kanata is running with --port 5829")
		os.Exit(1)
	}
	defer conn.Close()

	fmt.Println("✓ Connected to kanata")
	fmt.Println("Monitoring layer changes... (Ctrl+C to quit)\n")

	// Monitor layer changes
	scanner := bufio.NewScanner(conn)
	for scanner.Scan() {
		var msg Message
		if err := json.Unmarshal(scanner.Bytes(), &msg); err == nil {
			if msg.LayerChange.New != "" {
				layer := msg.LayerChange.New

				if layer == "default" {
					fmt.Printf("Layer: %-15s → No border\n", layer)
					ClearBorder()
				} else {
					color := getColorForLayer(layer)
					fmt.Printf("Layer: %-15s → Color: RGB(%.1f, %.1f, %.1f)\n",
						layer, color.R, color.G, color.B)
					DrawBorder(color, 8)
				}
			}
		}
	}

	if err := scanner.Err(); err != nil {
		fmt.Printf("Error reading from kanata: %v\n", err)
	}
}
